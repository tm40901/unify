<h1>トップページ</h1>

<% if user_signed_in? %>
  <%= link_to "#{current_user.last_name + " " + current_user.first_name}", "#", class: "user-name" %>
  <%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %>
  <%= link_to "計測器登録", new_instrument_path, class: "register" %>
<% else %>
  <%= link_to 'ログイン', new_user_session_path, class: "login" %>
  <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
<% end %>


<h1>計測器リスト</h1>

<div class="table-responsive">
  <table class="table table-hover sortable-table">
    <thead class="table-info">
      <tr>
        <th scope="col">管理番号</th>
        <th scope="col">計測器名</th>
        <th scope="col">管理者</th>
        <th scope="col">点検者</th>
        <th scope="col">点検日</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% @instruments.each do |instrument| %>
        <tr>
          <td><%= link_to instrument.management_number, instrument_path(instrument.id) %></td>
          <td><%= instrument.name %></td>
          <td><%= instrument.admin.last_name %> <%= instrument.admin.first_name %></td>
          <td><%= instrument.inspector.last_name %> <%= instrument.inspector.first_name %></td>
          <td><%= instrument.last_inspected_at.present? ? instrument.last_inspected_at.strftime("%Y-%m-%d") : '未点検' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>