<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class="form-wrap">
  <div class="form-header">
    <h1 class='form-header-text'>
      ユーザー登録
    </h1>
  </diV>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">社員番号</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :employee_number, class:"input-default", id:"employee_number", placeholder:"" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名(姓)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :last_name, class:"input-default", id:"last_name", placeholder:"" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">氏名(名)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :first_name, class:"input-default", id:"first_name", placeholder:"" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">所属部署</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :department, class:"input-default", id:"department", placeholder:"" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">権限付与</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :role, class:"input-default", id:"role", placeholder:"" %>
  </div>

  <div class='register-btn'>
    <%= f.submit "ユーザー登録", class:"register-red-btn" %>
  </div>

</div>
<% end %>